{% extends 'RocketAPIBundle::layout.html.twig' %}
{% block stylesheets %}
	<style type="text/css">
		html, body { height: 100%; margin: 0; padding: 0;}
		#map {
			width: 100%;
			height: 100%;
			float:left;
		}
	</style>
{% endblock %}
{% block body %}

	<div class="header">
		CODE NOTAM:<input type="text" id="code" style="width:50px;" onkeydown = "if (event.keyCode == 13)
                        document.getElementById('find').click()"/>

		<input type="button" class="btn btn-success" id="find" value="Find"/>
	</div>
<div id="map"></div>
{% endblock %}
{% block javascripts %}
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
	<script src="{{ asset('bundles/rocketapi/js/maps/markerclusterer.js') }}" type="text/javascript"></script>


	<script async defer
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBbPe-zdjTf9c3AYZuXT9pTG0LhZiKq5ao&signed_in=true&callback=initMap"></script>
	<script src="{{ asset('bundles/rocketapi/js/index.js') }}" type="text/javascript"></script>

{% endblock %}